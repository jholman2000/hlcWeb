@model hlcWeb.Models.Doctor

@{
    ViewBag.Title = "title";
}

<h2><i class="fa fa-user-md fa-2x text-primary"></i> @Model.FullName</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Contact info<span class="pull-right"><a href="#" class="hlc-panel-icon js-edit"><i class="fa fa-edit" title="Edit"></i></a></span></div>
                <table class="table table-condensed">
                    <tr>
                        <td class="hlc-prompt">Mobile:</td>
                        <td>@Model.MobilePhone</td>
                    </tr>
                    <tr>
                        <td class="hlc-prompt">Home:</td>
                        <td>@Model.HomePhone</td>
                    </tr>
                    <tr>
                        <td class="hlc-prompt">Pager:</td>
                        <td>@Model.Pager</td>
                    </tr>
                    <tr>
                        <td class="hlc-prompt">Email:</td>
                        <td><a href="mailto:@Model.EmailAddress">@Model.EmailAddress</a></td>
                    </tr>
                    <tr>
                        <td class="hlc-prompt">Practice:</td>
                        <td>
                            @Model.Practice.PracticeName<br />
                            @Model.Practice.Address1<br />
                            @if (!string.IsNullOrEmpty(Model.Practice.Address2))
                            {
                                @Model.Practice.Address2<br />
                            }
                            @if (!string.IsNullOrEmpty(Model.Practice.Address3))
                            {
                                @Model.Practice.Address3 <br />
                            }
                            @Model.Practice.City  @Model.Practice.State  @Model.Practice.Zip<br/>
                            <a href="tel:@Model.Practice.OfficePhone1">@Model.Practice.OfficePhone1</a>
                        </td>
                </tr>
                </table>                
            </div>
        </div>
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Attitudes</div>
                <div class="panel-body">
                    <span class="@Model.AttitudeText fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa @Model.AttitudeIcon fa-stack-1x fa-inverse" title="@Model.AttitudeText"></i>
                    </span>
                    @Model.AttitudeText
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Specialties</div>
                @if (Model.Specialties.Count == 0)
                {
                    <div class="panel-body text-center">
                        <em>No Specialties have been entered.</em>
                    </div>
                }
                else { 
                    <table class="table table-condensed">
                        @foreach (var sp in Model.Specialties)
                        {
                            <tr>
                                <td>@sp.SpecialtyName @sp.AreaOfExpertise</td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Hospitals</div>
                @if (Model.Specialties.Count == 0)
                {
                    <div class="panel-body text-center">
                        <em>No Hospitals have been entered.</em>
                    </div>
                }
                else
                {
                    <table class="table table-condensed">
                        @foreach (var ho in Model.Hospitals)
                        {
                            <tr>
                                <td>@ho.HospitalName</td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Comments</div>
                @if (Model.Specialties.Count == 0)
                {
                    <div class="panel-body text-center">
                        <em>No Comments have been entered.</em>
                    </div>
                }
                else
                {
                    <table class="table table-condensed">
                        @foreach (var n in Model.Notes)
                        {
                            <tr>
                                <td><h6><strong>@n.UserName on @n.DateEntered.ToShortDateString() @n.DateEntered.ToShortTimeString():</strong></h6>
                                    @n.Notes
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>

