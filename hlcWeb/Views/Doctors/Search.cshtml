@model List<hlcWeb.Models.Doctor>
<br />
<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">
        <i class="fa fa-user-md hlc-fa"></i> Doctors
    </div>
    <table class="table table-condensed table-striped table-hover">
        <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Attitude</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var doctor in @Model)
        {
            <tr class="js-click-row">
                <td>@Html.ActionLink(doctor.LastName, "View", "Doctors", new { id = doctor.Id }, null) </td>
                <td>@doctor.FirstName</td>
                @*<td><i class="@d.AttitudeText fa @d.AttitudeIcon" title="@d.AttitudeText"></i> <span class="hidden-xs">@d.AttitudeText</span></td>*@
                <td>
                    <span class="@doctor.AttitudeText fa-stack">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa @doctor.AttitudeIcon fa-stack-1x fa-inverse" title="@doctor.AttitudeText"></i>
                    </span>
                    <span class="hidden-xs" style="width:100px;text-align:left">@doctor.AttitudeText</span>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script src="@Url.Content("~/Scripts/hlc_search.js")"></script>
