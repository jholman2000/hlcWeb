@model List<hlcWeb.Models.DoctorNote>

<br />
<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">
        <i class="fa fa-comment-o hlc-fa"></i> Comments
    </div>
    <table id="searchTable" class="table table-condensed table-striped table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Doctor</th>
            <th class="hidden-xs">Author</th>
            <th>Note</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var doctorNote in @Model)
        {
            <tr class="js-click-row">
                <td>@Html.ActionLink(doctorNote.DateEntered.ToShortDateString(), "View", "Notes", new { id = doctorNote.Id }, null) </td>
                <td>@doctorNote.DoctorName</td>
                <td class="hidden-xs">@doctorNote.UserName</td>
                <td>@doctorNote.Notes</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script src="@Url.Content("~/Scripts/hlc_search.js")"></script>
