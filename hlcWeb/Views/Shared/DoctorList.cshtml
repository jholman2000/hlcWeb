@model List<hlcWeb.ViewModels.DoctorListViewModel>
<table class="table table-condensed table-striped table-hover">
    <thead>
    <tr>
        <th>Doctor</th>
        <th>Practice</th>
        <th class="hidden-xs">Office Phone</th>
    </tr>                        
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
        <tr class="js-click-row">
            <td>@Html.ActionLink(d.DoctorName, "View", "Doctors", new { id = d.Id }, null) </td>
            <td>
                @d.PracticeName
                <span class="visible-xs"><a href="tel:@d.OfficePhone1">@d.OfficePhone1</a></span>
            </td>
            <td class="hidden-xs hlc-table-phone"><a href="tel:@d.OfficePhone1">@d.OfficePhone1</a></td>
        </tr>
    }
    </tbody>
</table>
